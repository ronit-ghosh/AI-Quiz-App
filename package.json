{
  "name": "ai-quiz-generator",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd ./packages/db && bunx prisma generate && cd ../..",
    "start:backend": "cd ./apps/backend && bun start && cd ../..",
    "start:frontend": "cd ./apps/frontend && bun build && bun start cd ../.."
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prisma": "6.5.0",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
